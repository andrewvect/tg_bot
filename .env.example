# Domain Configuration
# For local development, use localhost.tiangolo.com or localhost
DOMAIN=localhost.tiangolo.com
# For production, set to your actual domain
# DOMAIN=yourdomain.com

# Used by the backend to generate links in emails to the frontend
FRONTEND_HOST=http://localhost:5173
# In staging and production, set this env var to the frontend host, e.g.
# FRONTEND_HOST=https://dashboard.yourdomain.com

# Environment: local, staging, production
ENVIRONMENT=local

# Project Configuration
PROJECT_NAME="Serbian Vocabulary Learning Bot"
STACK_NAME=serbian-vocab-bot

# Backend Configuration
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5173,https://localhost,https://localhost:5173,http://localhost.tiangolo.com"
SECRET_KEY=changethis-to-a-secure-random-key
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis-to-secure-password

# Email Configuration (Optional - for notifications)
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis-to-secure-password

# Monitoring (Optional)
SENTRY_DSN=

# Docker Configuration
DOCKER_IMAGE_BACKEND=backend
DOCKER_IMAGE_FRONTEND=frontend

# Telegram Bot Configuration (REQUIRED)
BOT_TOKEN=your-bot-token-from-botfather
# Get your bot token from @BotFather on Telegram

# Bot Polling Configuration
WEBHOOK_URL=api/v1/webhook
PORT=8000

# Use Telegram test environment (set to false for production)
TELEGRAM_TESTING=true

# Word Content Source
# Default points to the official Serbian vocabulary repository
URL_TO_GIT_FILES=https://raw.githubusercontent.com/andrewvect/words/refs/heads/main/

# Admin Configuration (Optional)
# Your Telegram user ID for admin features
ADMIN_TG_ID=